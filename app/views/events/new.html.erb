<h1>Créer un event</h1>


<%= form_for @event do |f| %>
  <div class="form-group">
    
    <label>Date de l'évènement </label>
    <%= f.datetime_select :start_date, class: 'form-control' %>

  </div>
  <div class="form-group">

    <label>Durée (multiple de 5) </label>
    <%= f.number_field :duration, min: 5, max: 120, step: 0, class: 'form-control' %>

  </div>
  <div class="form-group">

    <label>Titre</label>
    <%= f.text_field :title, class: 'form-control' %>

  </div>
  <div class="form-group">

    <label>Description</label>
    <%= f.text_area :description, class: 'form-control' %>

  </div>
  <div class="form-group">

    <label>Prix </label>
    <%= f.number_field :price, min: 1, max: 1000, step: 0, class: 'form-control' %>

  </div>
  <div class="form-group">

    <label>Lieux </label>
    <%= f.text_field :location, class: 'form-control' %>

  </div>

  <div class="form-group">

    <button type="submit" class="btn btn-primary">Créer l'évènement</button>

  </div>

<% end %>
